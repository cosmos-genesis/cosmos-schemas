            "default": 0.0
          },
          {
            "name": "humidity",
            "type": "double",
            "default": 0.0
          },
          {
            "name": "wind_speed_ms",
            "type": "double",
            "default": 0.0
          },
          {
            "name": "precipitation_type",
            "type": "string",
            "default": ""
          },
          {
            "name": "storm_activity",
            "type": "double",
            "default": 0.0
          }
        ]
      },
      "default": {}
    },
    {
      "name": "atmospheric_height_km",
      "type": "double",
      "default": 0.0
    },
    {
      "name": "greenhouse_effect_factor",
      "type": "double",
      "default": 0.0
