          "type": "record",
          "name": "AtmosphericComponent",
          "fields": [
            {
              "name": "molecule",
              "type": "string",
              "default": ""
            },
            {
              "name": "percentage",
              "type": "double",
              "default": 0.0
            },
            {
              "name": "phase",
              "type": "string",
              "default": ""
            }
          ]
        }
      },
      "default": []
