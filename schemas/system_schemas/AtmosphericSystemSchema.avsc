    {
      "name": "optical_properties",
      "type": {
        "type": "record",
        "name": "OpticalProperties",
        "fields": [
          {
            "name": "sky_color_rgb",
            "type": {
              "type": "array",
              "items": "int"
            },
            "default": []
          },
          {
            "name": "rayleigh_scattering",
            "type": "double",
            "default": 0.0
          },
          {
            "name": "opacity",
            "type": "double",
            "default": 0.0
          },
          {
            "name": "albedo",
            "type": "double",
            "default": 0.0
