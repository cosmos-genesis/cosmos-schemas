{
  "type": "record",
  "namespace": "CosmosGenesis.celestial_objects",
  "name": "AsteroidBelt",
  "doc": "Represents a distinct belt of asteroids or debris within a star system.",
  "version": "1.0.0",
  "fields": [
    {
      "name": "galaxy_id",
      "type": "string",
      "doc": "Identifier of the galaxy this belt belongs to"
    },
    {
      "name": "system_id",
      "type": "string",
      "doc": "Identifier of the star system that contains this belt"
    },
    {
      "name": "belt_id",
      "type": "string",
      "doc": "Stable identifier for this asteroid belt within the data lake"
    },
    {
      "name": "belt_designation",
      "type": "string",
      "doc": "The common name for the belt, e.g., 'Main Belt'."
    },
    {
      "name": "belt_type",
      "type": "CosmosGenesis.properties.BeltType",
      "doc": "The classification of the belt."
    },
    {
      "name": "inner_radius_au",
      "type": "double",
      "doc": "The inner edge of the belt in Astronomical Units (AU)."
