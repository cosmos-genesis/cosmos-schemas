    {
      "name": "outer_radius_au",
      "type": "double",
      "doc": "The outer edge of the belt in Astronomical Units (AU)."
    },
    {
      "name": "total_mass_em",
      "type": "double",
      "doc": "The total estimated mass of the belt in Earth Masses."
    },
    {
      "name": "dominant_composition",
      "type": "CosmosGenesis.properties.CompositionType",
      "doc": "The primary material composition of the belt."
    },
    {
      "name": "resources",
      "type": {
        "type": "array",
        "items": "string"
